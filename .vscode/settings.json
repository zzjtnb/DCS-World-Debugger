{
  // Enable the ESlint flat config support
  "eslint.useFlatConfig": true,
  // 禁用默认格式化程序,改用 eslint
  "prettier.enable": false,
  "editor.formatOnSave": false,
  // 自动修复
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.stylelint": "always",
    "source.organizeImports": "never"
  },
  // 将您的IDE中的风格规则设为静默,但仍然自动修复它们
  "eslint.rules.customizations": [
    {
      "rule": "style/*",
      "severity": "off"
    },
    {
      "rule": "format/*",
      "severity": "off"
    },
    {
      "rule": "*-indent",
      "severity": "off"
    },
    {
      "rule": "*-spacing",
      "severity": "off"
    },
    {
      "rule": "*-spaces",
      "severity": "off"
    },
    {
      "rule": "*-order",
      "severity": "off"
    },
    {
      "rule": "*-dangle",
      "severity": "off"
    },
    {
      "rule": "*-newline",
      "severity": "off"
    },
    {
      "rule": "*quotes",
      "severity": "off"
    },
    {
      "rule": "*semi",
      "severity": "off"
    }
  ],
  // 为所有支持的语言启用 eslint
  "eslint.validate": [
    "javascript",
    "typescript",
    "vue",
    "html",
    "markdown",
    "json",
    "jsonc",
    "yaml",
    "toml",
    "gql",
    "graphql",
    "astro"
  ],
  "stylelint.validate": [
    "css",
    "scss",
    "vue",
    "html",
    "xml",
    "svelte",
    "astro",
    "php"
  ],
  "cSpell.words": [
    "antfu",
    "icones",
    "IIRC",
    "lintstagedrc",
    "pinia",
    "tsbuildinfo",
    "tsnd",
    "typescripttolua",
    "unocss",
    "unplugin",
    "unref",
    "vueuse",
    "zzjtnb"
  ]
}
